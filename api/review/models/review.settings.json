{
  "kind": "collectionType",
  "collectionName": "reviews",
  "info": {
    "name": "Review",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "email": {
      "type": "email"
    },
    "review_title": {
      "type": "string"
    },
    "images_data": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "review_content": {
      "type": "text",
      "required": true
    },
    "comments": {
      "collection": "comment",
      "via": "review"
    },
    "score": {
      "type": "integer"
    },
    "votes_up": {
      "type": "biginteger"
    },
    "votes_down": {
      "type": "biginteger"
    },
    "verified_buyer": {
      "type": "boolean",
      "default": true
    },
    "sku": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "display_name": {
      "type": "string",
      "required": true
    },
    "remote_image_list": {
      "type": "json"
    },
    "user_avatar": {
      "type": "json"
    }
  }
}
